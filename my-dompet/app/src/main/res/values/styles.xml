<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonPrimary">
        <item name="backgroundTint">@color/primary_50</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="iconButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="progressBarPrimary">
        <item name="android:visibility">invisible</item>
        <item name="android:elevation">20dp</item>
        <item name="android:indeterminateTint">@color/primary_30</item>
    </style>


    <!--  belum dipakai  -->
    <style name="TextAppearance.Hargain.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
</resources>